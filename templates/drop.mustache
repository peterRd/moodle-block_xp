{{!
    @template block_xp/cm-selector

    CM selector.

    Example context (json):
    {
        "action": {
            "disabled": false,
            "url": "#",
            "id": "test-id",
            "classes": "btn btn-link",
            "attributes": [
                {
                    "name": "title",
                    "value": "Action link's title"
                }
            ],
            "icon": {
                "attributes": [
                    {"name": "src", "value": "https://raw.githubusercontent.com/moodle/moodle/master/pix/t/check.png"},
                    {"name": "alt", "value": "Action link's icon"}
                ]
            },
            "text": "This is an action link"
        }
    }
}}
<div id="block_xp-drop-{{uniqid}}">
    {{{action}}}
</div>
{{#js}}
require(['jquery', 'block_xp/drop'], function($, DropHandler) {
    const selector = '#block_xp-drop-{{uniqid}} a';
    DropHandler.init($(selector));
});
{{/js}}
